<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FrontEnd_WebApp</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/userSite.css" asp-append-version="true" />
    <link rel="stylesheet" href=@ViewData["Styles"] asp-append-version="true" />

</head>

<body>
    <div class="container">
        <header class="header">
            <div class="banner">
                <ul class="preview">

                </ul>
            </div>
        </header>

        <nav class="nav-container">
            <div class="navbar">
                <ul class="navlist main-navlist">
                    <li class="nav-items"><a href="/" data-link=>Home</a></li>
                    <li class="nav-items"><a href="/chat/create">Create Room</a></li>
                    <li class="nav-items"><a href="/chat/join">Join Room</a></li>
                    <li class="nav-items"><a href="/Report/report" data-link>Report</a></li>
                </ul>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="profile">
                <a href="/profile"><img src="https://www.w3schools.com/howto/img_avatar.png" alt="Avatar" class="avatar"></a>
            </div>
            <div class="caret-down">
                <i class="fas fa-caret-down"></i>
                <ul class="navlist navlist-responsive">
                    <li class="nav-items"><a href="/profile">Profile</a></li>
                    <li class="nav-items"><a href="/logout">Logout</a></li>
                </ul>
            </div>
        }
        else
        {
            <ul class="navlist auth-navlist">
                <li class="nav-items"><a href="/Account/Login">Sign In</a></li>
                <li class="nav-items btn-signin"><a href="/Account/Register">Sign Up</a></li>
            </ul>
        }

                @* <ul class="navlist auth-navlist">
                    <li class="nav-items"><a href="/Account/Login">Sign In</a></li>
                    <li class="nav-items btn-signin"><a href="/Account/Register">Sign Up</a></li>
                </ul>
                <div class="profile">
                    <a href="/profile"><img src="https://www.w3schools.com/howto/img_avatar.png" alt="Avatar"
                            class="avatar"></a>
                </div>
                <div class="caret-down">
                    <i class="fas fa-caret-down"></i>
                    <ul class="navlist navlist-responsive">
                        <li class="nav-items"><a href="/profile">Profile</a></li>
                        @* <li class="nav-items"><a href="/auth/signin">Sign In</a></li>
                        <li class="nav-items btn-signin"><a href="/auth/signup">Sign Up</a></li> 
                    </ul>
                </div> *@
            </div>
        </nav>

        <main class="main">
            @RenderBody()
        </main>

        <footer class="footer fotter-content">
            <p>&copy; 2023 - Web Application Development</p>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true" async></script>
    <script src="~/js/userSite.js" asp-append-version="true" async></script>
    <script src=@ViewData["Scripts"] asp-append-version="true" async></script>
    @* @await RenderSectionAsync("Scripts", required: true) *@
</body>

</html>
