<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FrontEnd_WebApp</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" type="text/css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/adminSite.css" type="text/css" asp-append-version="true" />

    <link rel="stylesheet" href=@ViewData["Styles"] type="text/css" asp-append-version="true" />

</head>

<body>
    <div class="wrapper">
        <header>
            <nav class="header">
                <ul>
                    <li><i class="fa-solid fa-bars"></i></li>
                    <li><a class="btn btn-hover__yellow" href="/account/logout">Logout</a></li>
                </ul>
            </nav>
        </header>
        <aside>
            <nav class="sidebar">
                <ul>
                    <li>
                        <a href="/admin/users">
                            <i class="fa-solid fa-users"></i>
                            <span>Users</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/movies">
                            <i class="fa-solid fa-film"></i>
                            <span>Movies</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/reports">
                            <i class="fa-solid fa-flag"></i>
                            <span>Reports</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>
        <main>
            @RenderBody()
        </main>
        <section class="section">
            <nav class="sidebar sidebar-responsive">
                <div class="close-menu">
                    <i class="fa-solid fa-times"></i>
                </div>
                <ul>
                    <li>
                        <a href="/users">
                            <i class="fa-solid fa-users"></i>
                            <span>Users</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/movies">
                            <i class="fa-solid fa-film"></i>
                            <span>Movies</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/reports">
                            <i class="fa-solid fa-flag"></i>
                            <span>Reports</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </section>
    </div>

    <script src="~/js/site.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/adminSite.js" type="text/javascript" asp-append-version="true"></script>
    <script src=@ViewData["Scripts"] asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>